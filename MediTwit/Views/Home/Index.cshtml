@model MediTwit.ViewModel.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h1>MediTwit test!</h1>
        
        @if (!User.Identity.IsAuthenticated)
        {
            <p>Sign in to Twit!</p>
        }
        else
        {
            using (Html.BeginForm())
            {
                @Html.TextAreaFor(m => m.TwitContent, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TwitContent)
                <br />
                <button type="submit" class="btn btn-primary">Twit!</button>
            }
        }



    </div>
    <div class="col-md-6" id="twits">
        
        @foreach (var twit in Model.Twits)
        {
            @Html.Partial("_Twit", twit)
        }

        

    </div>
</div>

@section Scripts {
    
<script src="~/Scripts/jquery.signalR-2.0.0.min.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/Scripts/Home/Index.js"></script>


    @Scripts.Render("~/bundles/jqueryval")
}


